{
  "name": "tax-tracker",
  "version": "1.0.0",
  "description": "Fatura Kayıt ve KDV Takip Uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "postbuild": "node scripts/copy-files.js",
    "clean": "node scripts/clean.js",
    "prebuild": "npm run clean",
    "build": "npm run react-build && npm run postbuild && electron-builder --config electron-builder.yml",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-portable": "npm run react-build && npm run postbuild && electron-forge make --targets=@electron-forge/maker-zip"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "antd": "^5.3.0",
    "chart.js": "^4.2.1",
    "dayjs": "^1.11.7",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2",
    "react-scripts": "5.0.1",
    "xlsx": "^0.18.5"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "homepage": "./",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icon.ico",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Tax Tracker",
            "iconUrl": "icon.ico",
            "setupIcon": "icon.ico"
          }
        }
      ]
    }
  }
}
